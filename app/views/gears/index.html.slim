  .g-title Soul Weapon
  .g-main
    .g-sw
      - @chars.order(name: 'ASC').each do |c|
        .g-ut
          .g-un
            - @skills.where(char: c).where.not('length(parent_id) < 4').each do |skill|
              .g-sw-desc
                img src='/images/media/heroes/#{c.name}/sw.png'
                .g-desc
                  .p1
                    | Soul of 
                    = skill.name
                  .p2
                    | Charges: 
                    = skill.mana
                    br
                    = skill.skill_number
                  .p3
                    | Cooldown: 
                    = skill.cooldown
                  .p4
                    hr
                    p = skill.description
                    p#ap = skill.parent_id
                    hr
                    img src="/images/media/manaOrb.png" id="a1" alt='ap1'
                    span Advancement Phase 1
                    .a1
                    img src="/images/media/manaOrb.png" id="a2" alt='ap2'
                    span Advancement Phase 2
                    .a2
