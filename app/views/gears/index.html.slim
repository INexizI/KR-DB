              p #{r.name}
            .p4
              hr
              p = gear.description

  .c-sub
    h4 Soul Weapon
    .g-unique
      - @chars.order(name: 'ASC').each do |c|
        - @skills.where(char: c).where.not('length(parent_id) < 4').each do |skill|
          .c-img
            img src='/images/media/heroes/#{c.name}/sw.webp' alt=skill.name
            .c-description.sw-description
              .p1
                p Soul of #{skill.name}
              .p2
                p
                  | Charges: #{skill.mana}
                  br
                  | #{skill.skill_number}
              .p3
                p Cooldown: #{skill.cooldown}
              .p4
                hr
                p #{skill.description}
                p#ap #{skill.parent_id}
                hr
                img src="/images/media/manaOrb.webp" id="a1" alt='Advancement Phase 1'
                span Advancement Phase 1
                p.a1
                img src="/images/media/manaOrb.webp" id="a2" alt='Advancement Phase 2'
                span Advancement Phase 2
                p.a2
