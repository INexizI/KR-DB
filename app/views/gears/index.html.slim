title Gear

.main
  .c-sub
    h4 T8 Sets
    .g-type#g-t8
      - @gears.where.not(gear_type: '9-UT').where(tier: 'T8').each do |gear|
        .c-img
          - if gear.gear_type == '7-J'
            - if gear.name == "Hell's Eyes"
              img src='/images/media/gears/#{gear.gear_type}/Ring/#{gear.set}.webp'
            - elsif gear.name == "Fire Dragon's Blessing"
              img src='/images/media/gears/#{gear.gear_type}/Earrings/#{gear.set}.webp'
            - elsif gear.name == 'Price of Arrogance'
              img src='/images/media/gears/#{gear.gear_type}/Necklace/#{gear.set}.webp'
            - elsif gear.name == 'Fire Circle'
              img src='/images/media/gears/#{gear.gear_type}/Bracelet/#{gear.set}.webp'
            - elsif gear.name == 'Ring of Amplification'
              img src='/images/media/gears/#{gear.gear_type}/Ring/#{gear.set}.webp'
            - elsif gear.name == 'Earrings of Amplification'
              img src='/images/media/gears/#{gear.gear_type}/Earrings/#{gear.set}.webp'
            - else
              img src='/images/media/gears/#{gear.gear_type}/#{gear.name}/#{gear.set}.webp'
          - else
            img src='/images/media/gears/#{gear.gear_type}/#{gear.set}.webp'
          .c-description
            .p1
              span #{gear.set} #{gear.name}
            .p2
              span
                - if gear.stat.name == 'HP'
                  | MAX HP
                - else
                  | #{gear.stat.name}
              br
              span #{gear.stat.value}
            .p4
              hr
              p #{gear.description}
              p #{gear.explanation}
  .c-sub
    h4 TM
    .g-tm
      #g-tm
        - @gears.where(tier: 'TM', explanation: '').each do |gear|
          .c-img
            - if gear.gear_type == '7-J'
                img src='/images/media/gears/#{gear.gear_type}/#{gear.gear_skill}/#{gear.set} #{gear.name}.webp'
            - else
                img src='/images/media/gears/#{gear.gear_type}/#{gear.set} #{gear.name}.webp'
            .c-description
              .p1
                span #{gear.explanation} #{gear.name} of #{gear.set} #{gear.gear_skill}
              .p2
                span #{gear.description}
                br
                span #{gear.stat.value}
              .p4
                hr
                p #{gear.notice}
      #g-tm
        - @gears.where(tier: 'TM', explanation: 'Reclaimed').each do |gear|
          .c-img
            - if gear.gear_type == '7-J'
                img src='/images/media/gears/#{gear.gear_type}/#{gear.gear_skill}/#{gear.explanation} #{gear.set} #{gear.name}.webp'
            - else
                img src='/images/media/gears/#{gear.gear_type}/#{gear.explanation} #{gear.set} #{gear.name}.webp'
            .c-description
              .p1
                span #{gear.explanation} #{gear.name} of #{gear.set} #{gear.gear_skill}
              .p2
                span #{gear.description}
                br
                span #{gear.stat.value}
              .p4
                hr
                p #{gear.notice}
  .c-sub
    h4 Mana Stone
    .g-type
      - @gears.where(description: '', gear_type: '9-UT').each do |gear|
        .c-img
          img src='/images/media/gears/#{gear.gear_type}/mana.webp'
          .c-description
            .p1
              p #{gear.set} #{gear.name}
            .p2
              span MAX HP
              br
              span #{gear.stat.value}
            .p4
              hr
  .c-sub
    h4 Artifacts
    .g-type
      - @gears.where(gear_type: 'art').each do |gear|
        .c-img
          img src='/images/media/art/#{gear.name}.webp'
          .c-description
            .p1
              span #{gear.set} #{gear.name}
            .p4
              hr
              p #{gear.description}
  .c-sub
    h4 Unique Treasure
    .g-type#g-treasure
      - @chars.each do |char|
        - @gears.where(char: char, gear_type: '9-UT').each do |gear|
          .c-img
            img src='/images/media/heroes/#{char.name}/ut#{gear.gear_skill}.webp'
            .c-description
              .p1
                span #{gear.set} #{gear.name}
              .p2
                span MAX HP
                br
                sapn #{gear.stat.value}
              .p3
                img src='/images/media/heroes/#{char.name}/portrait.webp'
                span #{char.name}
              .p4
                hr
                p #{gear.description}
  .c-sub
    h4 Unique Weapon
    .g-type
      - @chars.each do |char|
        - @gears.where(char: char, gear_type: '10-UW').each do |gear|
          .c-img
            img src='/images/media/heroes/#{char.name}/uw.webp'
            .c-description
              .p1
                span #{gear.set} #{gear.name}
              .p2
                span ATK
                br
                span #{gear.stat.value}
              .p3
                img src='/images/media/heroes/#{char.name}/portrait.webp'
                span #{char.name}
              .p4
                hr
                p #{gear.description}
  .c-sub
    h4 Class Unique Weapon
    .g-type
      - @roles.each do |role|
        - @gears.where(role: role, gear_type: '10-UW').each do |gear|
          .c-img
            img src='/images/media/heroes/#{role.name}.webp'
            .c-description
              .p1
                span #{gear.set} #{gear.name}
              .p2
                span ATK
                br
                span #{gear.stat.value}
              .p3
                img src='/images/media/classes/#{role.name}.webp'
                span #{role.name}
              .p4
                hr
                p #{gear.description}
  .c-sub
    h4 Soul Weapon
    .g-type
      - @chars.each do |char|
        - @skills.where(char: char).each do |skill|
          .c-img
            img src='/images/media/heroes/#{char.name}/sw.webp' alt=skill.name
            .c-description.sw-description
              .p1
                span Soul of #{skill.name}
              .p2
                span Charges: #{skill.mana}
                br
                span #{skill.skill_number}
              .p3
                span Cooldown: #{skill.cooldown}
              .p4
                hr
                p #{skill.description}
                p#ap #{skill.parent_id}
                hr
                img src="/images/media/manaOrb.webp" id="a1" alt='Advancement Phase 1'
                span Advancement Phase 1
                p.a1
                img src="/images/media/manaOrb.webp" id="a2" alt='Advancement Phase 2'
                span Advancement Phase 2
                p.a2
