title Gear

.g-sub
  .g-title T8 Sets
  .g-main
    .g-gear
      - @gears.order(id: 'ASC').where.not(set: '').where(tier: 'T8').each do |gear|
        .g-image
          - if gear.gear_type == '7-J'
            - if gear.name == "Hell's Eyes"
              img src='/images/media/gears/#{gear.gear_type}/Ring/#{gear.set}.png'
            - elsif gear.name == "Fire Dragon's Blessing"
              img src='/images/media/gears/#{gear.gear_type}/Earrings/#{gear.set}.png'
            - elsif gear.name == 'Price of Arrogance'
              img src='/images/media/gears/#{gear.gear_type}/Necklace/#{gear.set}.png'
            - elsif gear.name == 'Fire Circle'
              img src='/images/media/gears/#{gear.gear_type}/Bracelet/#{gear.set}.png'
            - elsif gear.name == 'Ring of Amplification'
              img src='/images/media/gears/#{gear.gear_type}/Ring/#{gear.set}.png'
            - elsif gear.name == 'Earrings of Amplification'
              img src='/images/media/gears/#{gear.gear_type}/Earrings/#{gear.set}.png'
            - else
              img src='/images/media/gears/#{gear.gear_type}/#{gear.name}/#{gear.set}.png'
          - else
            img src='/images/media/gears/#{gear.gear_type}/#{gear.set}.png'
          .g-desc
            .p1
              p #{gear.set} #{gear.name}
            .p2
              - if gear.stat.name == 'HP'
                | MAX HP
              - else
                | #{gear.stat.name}
              br
              | #{gear.stat.value}
            .p4
              hr
              p = gear.description
              p = gear.description_2

