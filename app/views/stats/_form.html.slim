= simple_form_for @stat do |f|
  - if @stat.errors.any?
    #error_explanation
      h2 = "#{pluralize(@stat.errors.count, "error")} prohibited this stat from being saved:"
      ul
        - @stat.errors.full_messages.each do |message|
          li = message

  .form
    = f.label :name
    br
    = f.text_field :name

  .form
    = f.label :value
    br
    = f.text_field :value

  .form
    br
    = f.association :role

  br
  .actions = f.submit
