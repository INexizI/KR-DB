              - else
                img src='/images/media/gears/#{gear.gear_type}/lava.png' title=(gear.set + ' ' + gear.name)
            - elsif gear.set == 'Legendary'
              - if gear.name == "Hell's Eyes"
                img src='/images/media/gears/#{gear.gear_type}/Ring/legendary.png' title=(gear.set + ' ' + gear.name)
              - elsif gear.name == "Fire Dragon's Blessing"
