            - elsif gear.set == 'Hero Suppression'
              - if gear.gear_type == '7-J'
                img src='/images/media/gears/#{gear.gear_type}/#{gear.name}/suppression.png' title=(gear.set + ' ' + gear.name)
              - else
                img src='/images/media/gears/#{gear.gear_type}/suppression.png' title=(gear.set + ' ' + gear.name)
            - elsif gear.set == 'Hero Protection'
              - if gear.gear_type == '7-J'
                img src='/images/media/gears/#{gear.gear_type}/#{gear.name}/protection.png' title=(gear.set + ' ' + gear.name)
              - else
                img src='/images/media/gears/#{gear.gear_type}/protection.png' title=(gear.set + ' ' + gear.name)
            - elsif gear.set == 'Dark Legion'
              - if gear.gear_type == '7-J'
                img src='/images/media/gears/#{gear.gear_type}/#{gear.name}/dark legion.png' title=(gear.set + ' ' + gear.name)
              - else
                img src='/images/media/gears/#{gear.gear_type}/dark legion.png' title=(gear.set + ' ' + gear.name)
            - elsif gear.name == "Hell's Eyes"
              img src='/images/media/gears/#{gear.gear_type}/Ring/legendary.png' title=(gear.set + ' ' + gear.name)
            - elsif gear.name == "Fire Dragon's Blessing"
              img src='/images/media/gears/#{gear.gear_type}/Earrings/legendary.png' title=(gear.set + ' ' + gear.name)
            - elsif gear.name == 'Price of Arrogance'
              img src='/images/media/gears/#{gear.gear_type}/Necklace/legendary.png' title=(gear.set + ' ' + gear.name)
            - elsif gear.name == 'Fire Circle'
              img src='/images/media/gears/#{gear.gear_type}/Bracelet/legendary.png' title=(gear.set + ' ' + gear.name)
        p = gear.name
