title Skills

.main
  .c-sub.skill
    - @chars.order('name ASC').each do |char|
      .s-hero
        img src='/images/media/heroes/#{char.name}/portrait.webp' alt=char.name
        h4 #{char.name}
        .flex
          - @skills.where(char_id: char.id).order('skill_number ASC').each do |skill|
            - if skill.parent_id.blank?
              div
                .c-img
                  img src='/images/media/heroes/#{char.name}/s#{skill.skill_number}.webp' alt=skill.name
                  .c-description
                    .p1 #{skill.name}
                    .p2
                      - if skill.mana.blank?
                        span Passive
                      - else
                        - if skill.mana == 0
                          span Mana cost: #{skill.mana}
                        - else
                          - skill.mana.times do
                            img src='/images/media/manaOrb.webp'
                    - if !skill.cooldown.blank?
                      .p3
                        p Cooldown: #{skill.cooldown}
                    .p4
                      hr
                      p #{skill.description}
                - @skills.where(parent_id: skill.id).each do |skill|
                  - if !skill.parent_id.blank?
                    .c-img
                      img src='/images/media/heroes/#{char.name}/s#{skill.skill_number}.webp' alt=skill.name
                      .c-description
                        .p1 #{skill.name}
                        .p2
                          - if skill.mana.blank?
                            span Passive
                          - else
                            - if skill.mana == 0
                              span Mana cost: #{skill.mana}
                            - else
                              - skill.mana.times do
                                img src='/images/media/manaOrb.webp'
                        - if !skill.cooldown.blank?
                          .p3
                            span Cooldown: #{skill.cooldown}
                        .p4
                          hr
                          p #{skill.description}
