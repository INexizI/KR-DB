= simple_form_for @skill do |f|
  - if @skill.errors.any?
    #error_explanation
      h2 = "#{pluralize(@skill.errors.count, "error")} prohibited this skill from being saved:"
      ul
        - @skill.errors.full_messages.each do |message|
          li = message

  .form
    = f.label :name
    br
    = f.text_field :name
  br
  .form
    = f.label :description
    br
    = f.text_field :description
  br
  .form
    = f.label :image
    br
    = f.file_field :image
  br
  .form
    = f.label :mana
    br
    = f.text_field :mana
  br
  .form
    br
    = f.association :char, collection: Char.order(:name)

  br
  .actions = f.submit
