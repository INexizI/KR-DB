= simple_form_for @skill do |f|
  - if @skill.errors.any?
    #error_explanation
      h2 = "#{pluralize(@skill.errors.count, "error")} prohibited this skill from being saved:"
      ul
        - @skill.errors.full_messages.each do |message|
          li = message

  .form-inputs
    = f.label :name
    br
    = f.text_field :name
  .form-inputs
    = f.label :description
    br
    = f.text_field :description
  .form-inputs
    = f.label :image
    br
    = f.file_field :image
  .form-inputs
    = f.label :mana
    br
    = f.text_field :mana
  .form-inputs
    = f.label :cooldown
    br
    = f.text_field :cooldown
  .form-inputs
    = f.label :skill_number
    br
    = f.text_field :skill_number
  .form-inputs
    br
    = f.association :char, collection: Char.order(:name)

  br
  .form-actions
    = f.button :submit
